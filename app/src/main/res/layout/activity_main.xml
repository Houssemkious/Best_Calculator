<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:gravity="center"
            android:text="="
            android:textSize="40sp"
            style="@style/background_Style" />

        <TextView
            android:id="@+id/result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:text="Result"
            android:gravity="end|center_vertical"
            android:textSize="30sp"
            android:paddingHorizontal="5dp"
            style="@style/background_Style"/>
    </LinearLayout>

    <TextView
        android:id="@+id/expr"
        style="@style/background_Style"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:gravity="end|center_vertical"
        android:paddingHorizontal="5dp"
        android:text=""
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".45"
        android:gravity="center"
        style="@style/background_Style"
        >




    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/clear"
            android:height="80dp"
            android:width="80dp"
            android:text="Ca"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Operator_Style"/>
        <TextView
            android:id="@+id/backSpace"
            android:height="80dp"
            android:width="80dp"
            android:text="โซ"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Operator_Style"/>

        <TextView
            android:id="@+id/lastAns"
            android:height="80dp"
            android:width="80dp"
            android:text="Ans"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Operator_Style"/>
        <TextView
            android:id="@+id/division"
            android:height="80dp"
            android:width="80dp"
            android:text="รท"
            android:tag="รท"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Operator_Style"/>
        <TextView
            android:id="@+id/number7"
            android:height="80dp"
            android:width="80dp"
            android:text="7"
            android:tag="7"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Number_Style"/>
        <TextView
            android:id="@+id/number8"
            android:height="80dp"
            android:width="80dp"
            android:text="8"
            android:tag="8"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Number_Style"/>
        <TextView
            android:id="@+id/number9"
            android:height="80dp"
            android:width="80dp"
            android:text="9"
            android:tag="9"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Number_Style"/>
        <TextView
            android:id="@+id/multiplication"
            android:height="80dp"
            android:width="80dp"
            android:text="x"
            android:tag="x"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Operator_Style"/>
        <TextView
            android:id="@+id/number4"
            android:height="80dp"
            android:width="80dp"
            android:text="4"
            android:tag="4"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Number_Style"/>
        <TextView
            android:id="@+id/number5"
            android:height="80dp"
            android:width="80dp"
            android:text="5"
            android:tag="5"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Number_Style"/>
        <TextView
            android:id="@+id/number6"
            android:height="80dp"
            android:width="80dp"
            android:text="6"
            android:tag="6"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Number_Style"/>
        <TextView
            android:id="@+id/minus"
            android:height="80dp"
            android:width="80dp"
            android:text="-"
            android:tag="-"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Operator_Style"/>
        <TextView
            android:id="@+id/number1"
            android:height="80dp"
            android:width="80dp"
            android:text="1"
            android:tag="1"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Number_Style"/>
        <TextView
            android:id="@+id/number2"
            android:height="80dp"
            android:width="80dp"
            android:text="2"
            android:tag="2"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Number_Style"/>
        <TextView
            android:id="@+id/number3"
            android:height="80dp"
            android:width="80dp"
            android:text="3"
            android:tag="3"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Number_Style"/>

        <TextView
            android:id="@+id/addition"
            android:height="170dp"
            android:width="80dp"
            android:text="+"
            android:tag="+"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector_addition"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Operator_Style"
            android:layout_rowSpan="2"/>
        <TextView
            android:id="@+id/number0"
            android:height="80dp"
            android:width="80dp"
            android:text="0"
            android:tag="0"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Number_Style"/>
        <TextView
            android:id="@+id/point"
            android:height="80dp"
            android:width="80dp"
            android:text="."
            android:tag="."
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Number_Style"/>
        <TextView
            android:id="@+id/equals"
            android:height="80dp"
            android:width="80dp"
            android:text="="
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            style="@style/Operator_Style"/>

    </GridLayout>

    </LinearLayout>


</LinearLayout>